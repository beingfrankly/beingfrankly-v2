---
import { getCollection } from "astro:content";
import ArticleList from "../components/ArticleList.astro";
import BaseHead from "../components/BaseHead.astro";
import { SITE_DESCRIPTION } from "../config";
import BaseLayout from "../layouts/BaseLayout.astro";
const blogEntries = await getCollection("blog");
const topThree = blogEntries.slice(0, 3);
---

<BaseLayout>
  <BaseHead description={SITE_DESCRIPTION} slot="head" />
  <Fragment slot="content">
    <div class="container">
      <section class="intro">
        <h1 class="h4">Hi, I'm Frank</h1>
        <p>
          I'm a developer advocate & consultant. I write and talk about
          accessibility, because I want to make it more accessible for everyone.
        </p>
      </section>
      <section class="recent">
        <h2 class="h6 mx-auto">Recently published</h2>
        <ArticleList contentItems={topThree} as="3" size="h6 mb-0" />
      </section>
    </div>
  </Fragment>
</BaseLayout>

<style>
  .container {
    display: grid;
  }

  .intro {
    margin-left: auto;
    margin-right: auto;
  }

  .intro > p {
    font-size: var(--24px);
  }

  h1 {
    position: relative;
  }

  h3 {
    margin-top: 0;
  }

  .hi {
    font-size: var(--18px);
    position: absolute;
    top: -20px;
    font-weight: 400;
  }
</style>
